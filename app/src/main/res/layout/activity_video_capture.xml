<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.myandroidapps_demo.VideoCapture">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAPTURE VIDEO"
        android:id="@+id/textView11"
        android:textSize="20dp"
        android:textColor="#0d225c"
        android:textAlignment="center"
        android:background="#f3e081"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPTURE"
        android:id="@+id/button26"
        android:layout_above="@+id/button28"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/button27"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button26"
        android:layout_toStartOf="@+id/button26"
        android:background="#8cfa82" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LoGOUT"
        android:id="@+id/button28"
        android:layout_alignTop="@+id/button27"
        android:layout_toRightOf="@+id/button26"
        android:layout_toEndOf="@+id/button26"
        android:background="#ef5b2e" />

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoView"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button26"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />
</RelativeLayout>
